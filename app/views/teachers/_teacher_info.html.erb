<div class="card">
  <div class="card-header">
    <div class="row d-flex">
      <div class="col-sm-8 d-flex">
        <h3>
          <%= teacher.full_name %>
        </h3>
      </div>
      <div class="col-sm-4 text-right">
        <%= link_to "Edit Information", edit_teacher_path(teacher), class: "btn btn-primary" %>
        <%= link_to("Delete", teacher_path(teacher), method: "delete", class: "btn btn-danger", data: {confirm: "Are you sure?"}) %>
      </div>
    </div>
  </div>
  <div class="card-body ml-5">
    <div class="row mt-3 pb-3">
      <div class="col-sm-4">
        <h5> Email </h5>
        <a href = <%= "mailto:#{teacher.email}" %>> <%= teacher.email %> </a>
      </div>

      <div class="col-sm-4">
        <h5> Snap<i>!</i> Username </h5>
        <%= snap_link(teacher) %>
      </div>

      <div class="col-sm-4">
        <h5> Application Status </h5>
        <%= teacher.display_application_status %>
      </div>
    </div>

    <div class="row mt-5 pb-3">
      <div class="col-sm-6">
        <h5> Personal or Course Website </h5>
        <% if teacher.personal_website.blank? %>
          None provided
        <% else %>
          <%= teacher.personal_website %>
        <% end %>
      </div>

      <div class="col-sm-6">
        <h5> Education Level Target </h5>
        <%= teacher.display_education_level %>
      </div>
    </div>

    <div class="row mt-5 pb-3">
      <div class="col-sm-12">
        <h5> Current Status </h5>
        <%= truncate(teacher.display_status, length: 50) %>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-sm-6">
        <h5> School Name </h5>
        <a href=<%= teacher.school.website %>><%= teacher.school.name %></a>
      </div>

      <div class="col-sm-6">
        <h5> School Location </h5>
        <%= teacher.school.location %>
      </div>
    </div>
  </div>
</div>
