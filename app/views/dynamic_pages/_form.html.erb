<div class="form">
  <label for="dynamic_page_title"><h3 class="label-required">Title</h3></label>
  <%= fields.text_field :title, class: "form-control", required: true %>
  <label for="dynamic_page_slug"><h3 class="label-required">Slug</h3></label>
  <%= fields.text_field :slug, class: "form-control", required: true %>
  <label for="dynamic_page_permissions"><h3 class="label-required">Permissions</h3></label>
  <div class="row container">
    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-4 row">
      <div class="col-1">
        <%= fields.radio_button :permissions, 'Admin', class: "form-check-input", id: "inlineRadioAdmin", required: true %>
      </div>
      <div class="col-2">
        <label class="form-check-label" for="inlineRadioAdmin">Admin</label>
      </div>
    </div>
    
    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-4 row">
      <div class="col-1">
        <%= fields.radio_button :permissions, 'Verified Teacher', class: "form-check-input", id: "inlineRadioTeacher", required: true %>
      </div>
      <div class="col-2">
        <label class="form-check-label" for="inlineRadioTeacher">Verified Teacher</label>
      </div>
    </div>

    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 col-xs-4 row">
      <div class="col-1">
        <%= fields.radio_button :permissions, 'Public', class: "form-check-input", id: "inlineRadioPublic", required: true %>
      </div>
      <div class="col-2">
        <label  class="form-check-label" for="inlineRadioPublic">Public</label>
      </div>
    </div>
  </div>
  <label for="dynamic_page_body"><h3>Body</h3></label>
  <%= fields.rich_text_area :body, rows: 20, style: 'height: 500px; overflow-y: auto;', value: @dynamic_page.body %>
</div>
