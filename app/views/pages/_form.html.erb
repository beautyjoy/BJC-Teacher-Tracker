<div class="form-group">
  <label for="page_title" class="form-label label-required">Title</label>
  <%= fields.text_field :title, class: "form-control", required: true %>
</div>
<div class="form-group">
  <label for="page_url_slug" class="form-label label-required">URL slug</label>
  <%= fields.text_field :url_slug, class: "form-control", required: true %>
</div>
<div class="form-group">
  <label for="page_category" class="form-label">Category</label>
  <%= fields.text_field :category, class: "form-control" %>
</div>

<div class="form-group">
  <label class="label-required form-label">Viewer Permissions</label>
  <div class="form-check">
    <%= fields.radio_button :viewer_permissions, 'Admin', class: "form-check-input", id: "inlineRadioAdmin", required: true %>
    <label class="form-check-label" for="inlineRadioAdmin">Admin</label>
  </div>
  <div class="form-check">
    <%= fields.radio_button :viewer_permissions, 'Public', class: "form-check-input", id: "inlineRadioPublic", required: true %>
    <label class="form-check-label" for="inlineRadioPublic">Public</label>
  </div>
  <div class="form-check">
    <%= fields.radio_button :viewer_permissions, 'Verified Teacher', class: "form-check-input", id: "inlineRadioTeacher", required: true %>
    <label class="form-check-label" for="inlineRadioTeacher">Verified Teacher</label>
  </div>
</div>

<div class="form-group">
  <label for="page_html" class="form-label">HTML Content</label>
  <%= fields.text_area :html, rows: 20, class: 'form-control', style: 'font-family: monospace;' %>
  <div class="form-text text-muted">
    This is an unresricted HTML field.
    <br>
    <em>Note:</em> Links that begin with <code>/bjc-r</code> will be expanded on save to reference <code>https://bjc.edc.org/bjc-r</code>.
  </div>
</div>
