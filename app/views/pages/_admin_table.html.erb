<table class="table js-dataTable">
  <thead class="thead-dark">
    <tr align = "center">
      <th scope="col">Title</th>
      <th scope="col">Last Editor</th>
      <% if logged_in? && current_user.admin? %>
        <th scope="col">Permissions</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |p| %>
      <tr align="center">
        <td> <%= link_to(p.title, page_path(p)) %> </td>
        <td> <%= Teacher.find(p.last_editor).full_name %> </td>
        <% if logged_in? && current_user.admin? %>
          <td> <%= p.permissions %> </td>
          <td> <%= button_to("Edit", edit_page_path(p), class: "btn btn-primary", type: 'button', id: "edit_"+p.slug) %> </td>
          <td> <%= button_to("Delete", page_path(p), method: :delete, class: "btn btn-danger", type: 'button', id: "delete_"+p.slug) %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
