<% provide(:title, "Email Templates") %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-striped js-dataTable">
        <thead class="thead-dark">
          <tr><th>Purpose</th></tr>
        </thead>
        <tbody>
          <% @all_templates.each do |template| %>
          <tr>
            <td><%= link_to(template.title, edit_email_template_path(template)) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
